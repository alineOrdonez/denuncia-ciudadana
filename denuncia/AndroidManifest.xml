<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upiicsa.denuncia"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="21" />

    <permission
        android:name="com.upiicsa.denuncia.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.upiicsa.denuncia.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!-- Required to show current location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Required OpenGL ES 2.0. for Maps V2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.upiicsa.denuncia.controller.MainMenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.upiicsa.denuncia.controller.ComplaintListActivity"
            android:label="@string/title_activity_complaint_list"
            android:parentActivityName="com.upiicsa.denuncia.controller.MainMenuActivity"
            android:screenOrientation="portrait" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.upiicsa.denuncia.controller.MainMenuActivity" />
        </activity>
        <activity
            android:name="com.upiicsa.denuncia.controller.NewComplaintActivity"
            android:label="@string/title_activity_new_complaint"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustPan" >
        </activity>
        <activity
            android:name="com.upiicsa.denuncia.controller.ConsultActivity"
            android:label="@string/title_activity_consult"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.upiicsa.denuncia.controller.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name="com.upiicsa.denuncia.controller.ComplaintDetailActivity"
            android:label="@string/title_activity_complaint_detail"
            android:parentActivityName="com.upiicsa.denuncia.controller.ComplaintListActivity"
            android:screenOrientation="portrait" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.upiicsa.denuncia.controller.ComplaintListActivity" />
        </activity>
        <activity
            android:name="com.upiicsa.denuncia.controller.SelectLocationActivity"
            android:label="@string/title_activity_select_location"
            android:screenOrientation="portrait" >
        </activity>
        <!-- Goolge Maps API Key -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyD09RLgwiofTtGYOtAzbdBEdQ7shJtdoB0" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>